#!/usr/bin/env python3
# -*- coding: utf-8 -*-

"""
wifitex-gui - GUI launcher script for Wifitex
"""

import sys
import os

# Add the wifitex package to the Python path
sys.path.insert(0, os.path.join(os.path.dirname(__file__), '..'))

try:
    from wifitex.gui.__main__ import main
    sys.exit(main())
except ImportError as e:
    print("Error: GUI module not available")
    print("Please install GUI dependencies: pip install -r requirements-gui.txt")
    print("Or run without --gui flag for command line mode")
    sys.exit(1)
except Exception as e:
    print(f"Error starting GUI: {e}")
    sys.exit(1)
